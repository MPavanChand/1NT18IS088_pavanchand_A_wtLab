        function planet(name, color){
            this.name = name;
            this.color = color;

            this.display = function(){
                document.getElementById("dsp").innerHTML =  `Planet name is ${this.name} and it's color is ${this.color}`
            }
        }
        function fun1(){
            let nwPlanet = new planet("Mercury", "red")
            nwPlanet.display()
            
            butn.style.visibility= 'visible';
            butn2.style.visibility= 'hidden';
            butn3.style.visibility= 'hidden';
